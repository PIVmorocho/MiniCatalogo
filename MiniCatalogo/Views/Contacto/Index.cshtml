@{
    ViewData["Title"] = "Contáctenos";
}

<div class="container mt-5">

    <!-- Encabezado -->
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">📍 Contáctenos</h1>
        <p class="text-muted lead">Estamos para ayudarte — visítanos o escríbenos</p>
    </div>

    <div class="row g-4">

        <!-- Tarjeta Info -->
        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">🏪 TechStore Ecuador</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>📌 Dirección:</strong><br />
                            Av. Amazonas N23-45 y Veintimilla<br />
                            Quito, Pichincha, Ecuador
                        </li>
                        <li class="list-group-item">
                            <strong>📞 Teléfono:</strong><br />
                            +593 2 255-0000 / +593 99 123-4567
                        </li>
                        <li class="list-group-item">
                            <strong>📧 Correo:</strong><br />
                            contacto@techstoreecuador.com
                        </li>
                        <li class="list-group-item">
                            <strong>🕐 Horario de atención:</strong><br />
                            Lunes a Viernes: 09:00 – 18:00<br />
                            Sábados: 09:00 – 14:00
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Formulario de contacto -->
        <div class="col-md-6">
            <div class="card shadow h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">✉️ Envíanos un mensaje</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Nombre completo</label>
                            <input type="text" class="form-control" placeholder="Tu nombre" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Correo electrónico</label>
                            <input type="email" class="form-control" placeholder="correo@ejemplo.com" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mensaje</label>
                            <textarea class="form-control" rows="4" placeholder="¿En qué podemos ayudarte?"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success w-100">📤 Enviar Mensaje</button>
                    </form>
                </div>
            </div>
        </div>

    </div>

    <!-- Mapa embebido Quito -->
    <div class="mt-5">
        <h5 class="mb-3">🗺️ Nuestra ubicación</h5>
        <div class="ratio ratio-16x9 shadow rounded">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3989.7953985!2d-78.4916!3d-0.1865!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x91d59a4002427c9f%3A0x44b991e158ef5572!2sQuito%2C%20Ecuador!5e0!3m2!1ses!2sec!4v1234567890"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>

</div>