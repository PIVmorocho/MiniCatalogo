@model List<MiniCatalogo.Models.Producto>

@{
    ViewData["Title"] = "Catálogo de Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2> Catálogo de Productos</h2>
        <a asp-action="Create" class="btn btn-success">+ Agregar Producto</a>
    </div>

    <div class="row">
        @foreach (var producto in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <img src="@producto.UrlImagen" class="card-img-top" alt="@producto.Nombre" style="height:200px; object-fit:cover;">
                    <div class="card-body">
                        <span class="badge bg-primary mb-2">@producto.Categoria</span>
                        <h5 class="card-title">@producto.Nombre</h5>
                        <p class="card-text text-muted">@producto.Descripcion</p>
                        <h4 class="text-success">$@producto.Precio.ToString("F2")</h4>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Detail" asp-route-id="@producto.Id" class="btn btn-outline-primary btn-sm w-100">Ver Detalle</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>